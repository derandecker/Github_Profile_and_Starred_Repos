<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/default_margin">

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginEnd="@dimen/default_margin"
            android:hint="@string/username"
            android:inputType="textNoSuggestions|textVisiblePassword"
            app:layout_constraintBaseline_toBaselineOf="@+id/submitButton"
            app:layout_constraintEnd_toStartOf="@+id/submitButton"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/nameTextView"
            style="@style/TextAppearance.Material3.HeadlineMedium"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/profilePicImageView"
            app:layout_constraintStart_toEndOf="@id/profilePicImageView"
            app:layout_constraintBottom_toBottomOf="@id/profilePicImageView"
            tools:text="Deran Decker"
            tools:visibility="visible"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/bioTextView"
            android:layout_marginTop="@dimen/extra_space_margin"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:textSize="@dimen/bio_text_size"
            tools:text="My home and my heart are in Honolulu. Looking for remote work, or work in Honolulu, as an Android Developer."
            app:layout_constraintTop_toBottomOf="@id/profilePicImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:visibility="visible"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/profilePicImageView"
            android:layout_width="@dimen/profile_image_width"
            android:layout_height="@dimen/profile_image_height"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toStartOf="@id/nameTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/usernameEditText"
            tools:src="@drawable/deran_github_profile_pic"
            android:contentDescription="@string/github_profile_picture_content_description"
            tools:visibility="visible"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/showReposButton"
            android:text="@string/show_repos_button"
            android:layout_marginTop="@dimen/extra_space_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bioTextView"
            tools:visibility="visible"
            android:visibility="invisible"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

    </data>
</layout>